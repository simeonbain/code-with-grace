            <LinkButton
              href={`${SITE.base}/contact`}
              className={`contact-link-btn focus-outline p-3 sm:p-1 ${activeNav === "contact" ? "active" : ""}`}
              ariaLabel="contact"
              title="Contact"
            >
              <svg xmlns="http://www.w3.org/2000/svg"
                ><path
